<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.vpipl.mmtfranchisee.Register_User_Activity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="center"
        android:singleLine="true"
        android:text="Vendor Registration"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:visibility="visible"
        tools:ignore="Deprecated,HardcodedText" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LLV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_memberlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_sposnor_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="bottom"
                    android:minHeight="52dp"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_sponsor_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bottom_line"
                        android:digits="@string/alphanumeric"
                        android:hint="Enter Sponsor Id"
                        android:inputType="text"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textSize="13sp"
                        android:visibility="visible"
                        tools:ignore="Deprecated" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txt_sponsor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorAccent"
                    android:visibility="gone" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:minHeight="52dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_fran_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bottom_line"
                        android:hint="Enter Vendor Name"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        tools:ignore="Deprecated,HardcodedText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:minHeight="52dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_fran_mobileno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bottom_line"
                        android:hint="Enter Mobile No"
                        android:inputType="number"
                        android:maxLength="10"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        tools:ignore="Deprecated,HardcodedText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:minHeight="52dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_fran_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bottom_line"
                        android:hint="Enter Pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        tools:ignore="Deprecated,HardcodedText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:minHeight="52dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_fran_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bottom_line"
                        android:hint="Enter Address"
                        android:inputType="textPostalAddress"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        tools:ignore="Deprecated,HardcodedText" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/fran_state"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt_reg_state"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/fran_city"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txt_reg_state"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:spinnerMode="dialog" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:minHeight="52dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_fran_contact_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bottom_line"
                        android:hint="Enter Contact Person"
                        android:inputType="text"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        tools:ignore="Deprecated,HardcodedText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_franchisee_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_rectangle_green"
                android:focusableInTouchMode="false"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
